{
  "name": "hg-ppc",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-workspace Google Ads + Meta Ads platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "turbo run db:generate --filter=@hg-ppc/db",
    "db:migrate": "turbo run db:migrate --filter=@hg-ppc/db",
    "db:push": "turbo run db:push --filter=@hg-ppc/db",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20 <22",
    "pnpm": ">=9 <10"
  }
}
